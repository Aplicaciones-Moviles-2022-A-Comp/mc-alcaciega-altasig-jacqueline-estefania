<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D52196F3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="NovelApp"
        android:textColor="#DDFFFFFF"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193" />

    <Button
        android:id="@+id/btn_ir_login"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#14FB03"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/btn_ir_novelas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_ir_novelas"
        app:layout_constraintTop_toBottomOf="@+id/btn_ir_novelas" />

    <Button
        android:id="@+id/btn_ir_logout"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FD0404"
        android:text="Logout"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/btn_ir_login"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_ir_login"
        app:layout_constraintTop_toBottomOf="@+id/btn_ir_login" />

    <Button
        android:id="@+id/btn_ir_novelas"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="#673AB7"
        android:text="home"
        app:layout_constraintEnd_toEndOf="@+id/tv_titulo"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="@+id/tv_titulo"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo" />

</androidx.constraintlayout.widget.ConstraintLayout>